<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:SwapiMaui.ViewModel"
             xmlns:model="using:SwapiMaui.Model"
             xmlns:global="clr-namespace:"
             x:DataType="viewmodel:ListViewModel"
             x:Class="SwapiMaui.View.ListPage">
    <ContentPage.Content>
        <VerticalStackLayout>
                <CollectionView BackgroundColor="Transparent" ItemsSource="{Binding People, Mode=OneWay}" SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:Person">
                            <Frame Padding="0" HeightRequest="60">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer
                                        CommandParameter="{Binding .}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ListViewModel}}, Path=GoToDetailCommand}" />
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout Grid.Column="1" Padding="10" VerticalOptions="Center">
                                        <Label Text="{Binding Name}"  />
                                        <Label Text="{Binding Gender}" />
                                    </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            <Button Text="Get People" Command="{Binding GetPeopleCommand}" IsEnabled="{Binding IsNotBusy}" />
        </VerticalStackLayout>

    </ContentPage.Content>
</ContentPage>