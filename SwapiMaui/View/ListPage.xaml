<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:SwapiMaui.ViewModel"
             xmlns:model="using:SwapiMaui.Model"
             x:DataType="viewmodel:ListViewModel"
             x:Class="SwapiMaui.View.ListPage">
    <ContentPage.Content>
        <VerticalStackLayout>
                <CollectionView BackgroundColor="Transparent" ItemsSource="{Binding Items, Mode=OneWay}" SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:ListItem">
                            <Frame CornerRadius="0" Padding="0" HeightRequest="60">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer
                                        CommandParameter="{Binding .}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ListViewModel}}, Path=GoToPersonDetailCommand}" />
                                </Frame.GestureRecognizers>
                                <VerticalStackLayout Grid.Column="1" Padding="10" VerticalOptions="Center" BackgroundColor="Black">
                                    <Label Style="{StaticResource Headline}" Text="{Binding Headline}" />
                                    <Label Style="{StaticResource SubHeadline}" Text="{Binding Subtitle}" />
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            <VerticalStackLayout Spacing="10" Margin="10">
                <Button Text="GET PEOPLE" Command="{Binding GetPeopleCommand}" IsEnabled="{Binding IsNotBusy}" />
                <Button Text="GET FILMS" Command="{Binding GetFilmsCommand}" IsEnabled="{Binding IsNotBusy}" />
            </VerticalStackLayout>


        </VerticalStackLayout>

    </ContentPage.Content>
</ContentPage>